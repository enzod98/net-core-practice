@model Turnos.Models.Medico


<h4>Medico</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Create" class="col s12">
            <div asp-validation-summary="ModelOnly" class=""></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre" class=""></span>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido" class=""></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">directions</i>
                    <input asp-for="Direccion" type="text" class="validate">
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion" class=""></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="tel" class="validate">
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Telefono" class=""></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">local_post_office</i>
                    <input asp-for="Email" type="text" class="validate">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class=""></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">event</i>
                    <input asp-for="HorarioAtencionDesde" type="text" class="timepicker">
                    <label asp-for="HorarioAtencionDesde"></label>
                    <span asp-validation-for="HorarioAtencionDesde" class=""></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">event</i>
                    <input asp-for="HorarioAtencionHasta" type="text" class="timepicker">
                    <label asp-for="HorarioAtencionHasta"></label>
                    <span asp-validation-for="HorarioAtencionHasta" class=""></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">starrate</i>
                    <select name="IdEspecialidad" class="" asp-items="ViewBag.ListaEspecialidades"></select>
                </div>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Guardar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="col s6 m6 right">
                    <a class="waves-effect waves-light btn grey darken-4" asp-action="Index">
                        <i class="material-icons left">undo</i>Volver
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
